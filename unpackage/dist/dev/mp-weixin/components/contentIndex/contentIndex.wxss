.card {
  margin: 5rpx;
  height: 500rpx;
  width: 350rpx;
  display: flex;
  flex-direction: column;
  padding-bottom: 15rpx;
  justify-content: space-evenly;
}
.card .top {
  height: 350rpx;
}
.card .top image {
  border-radius: 10rpx 10rpx 0 0;
  height: 100%;
  width: 100%;
}
.card .center {
  height: 80rpx;
  padding: 10rpx;
  font-weight: bold;
}
.card .bottom {
  display: flex;
  padding: 2rpx 10rpx;
  justify-content: space-between;
}
.card .bottom .left {
  display: flex;
  justify-content: center;
  align-items: center;
}
.card .bottom .left .avatar {
  height: 50rpx;
  width: 50rpx;
}
.card .bottom .left .avatar image {
  height: 100%;
  width: 100%;
  border-radius: 50%;
}
.card .bottom .left .name {
  padding-left: 25rpx;
  color: #888;
  font-size: 25rpx;
}
.card .bottom .like {
  display: flex;
  justify-content: center;
  align-items: center;
}
.card .bottom .like .icon {
  height: 40rpx;
  width: 40rpx;
}
.card .bottom .like .icon image {
  height: 100%;
  width: 100%;
}
.card .bottom .like .number {
  font-size: #888;
  padding-left: 5rpx;
  padding-top: 8rpx;
}