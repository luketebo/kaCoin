.submitMessage {
  height: 100%;
  width: 750rpx;
  background-color: white;
  display: flex;
  flex-flow: row wrap;
}
.submitMessage-package {
  padding: 0 15rpx;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-self: flex-start;
}
.submitMessage-package-form {
  margin: 0 0 15rpx 0;
}
.submitMessage-btn {
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  align-self: flex-end;
  width: 100%;
  display: flex;
  margin-top: 500rpx;
  border: 1rxp solid red;
}
.submitMessage-btn-rought {
  display: inline-block;
  margin: 0 15rpx;
}
.submitMessage-btn-submit {
  flex: 1;
  display: inline-block;
}
